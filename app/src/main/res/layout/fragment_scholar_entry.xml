<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".ScholarEntryFragment">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center"
            android:layout_marginStart="@dimen/appbar_padding" android:layout_marginEnd="@dimen/appbar_padding">
        <ImageView
                android:layout_width="160dp"
                android:layout_height="wrap_content" tools:src="@tools:sample/avatars" android:id="@+id/avatar"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical"
                android:paddingStart="@dimen/appbar_padding_top">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/viewName"
                    android:textColor="@color/design_default_color_on_secondary" android:textSize="18sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="@dimen/scholar_roll_tiny_margin">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="H"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1"
                            android:layout_marginEnd="@dimen/scholar_roll_tiny_margin"
                            android:background="@color/bkgColorH"
                            android:paddingStart="@dimen/scholar_roll_tiny_margin"
                            android:paddingEnd="@dimen/scholar_roll_tiny_margin" android:textColor="@color/colorWhite"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/viewH" android:layout_weight="1"
                            android:textColor="@color/design_default_color_on_secondary"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/textView6"
                            android:layout_marginEnd="@dimen/scholar_roll_tiny_margin"
                            android:background="@color/bkgColorA"
                            android:paddingStart="@dimen/scholar_roll_tiny_margin"
                            android:paddingEnd="@dimen/scholar_roll_tiny_margin" android:textColor="@color/colorWhite"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/viewA" android:layout_weight="1"
                            android:textColor="@color/design_default_color_on_secondary"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/textView7"
                            android:layout_marginEnd="@dimen/scholar_roll_tiny_margin"
                            android:background="@color/bkgColorS"
                            android:paddingStart="@dimen/scholar_roll_tiny_margin"
                            android:paddingEnd="@dimen/scholar_roll_tiny_margin" android:textColor="@color/colorWhite"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/viewS" android:layout_weight="1"
                            android:textColor="@color/design_default_color_on_secondary"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="C"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/textView8"
                            android:layout_marginEnd="@dimen/scholar_roll_tiny_margin"
                            android:background="@color/bkgColorC"
                            android:paddingStart="@dimen/scholar_roll_tiny_margin"
                            android:paddingEnd="@dimen/scholar_roll_tiny_margin" android:textColor="@color/colorWhite"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/viewC" android:layout_weight="1"
                            android:textColor="@color/design_default_color_on_secondary"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="P"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/textView9"
                            android:layout_marginEnd="@dimen/scholar_roll_tiny_margin"
                            android:background="@color/bkgColorP"
                            android:paddingStart="@dimen/scholar_roll_tiny_margin"
                            android:paddingEnd="@dimen/scholar_roll_tiny_margin" android:textColor="@color/colorWhite"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/viewP" android:layout_weight="1"
                            android:textColor="@color/design_default_color_on_secondary"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_marginTop="@dimen/scholar_roll_tiny_margin"
            >
                <ImageView
                        android:src="@drawable/baseline_card_travel_black_24dp"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content" android:layout_weight="1"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/viewPosition" android:layout_weight="1"
                        android:layout_marginStart="@dimen/appbar_padding_top"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" android:layout_marginTop="@dimen/scholar_roll_tiny_margin"
            >
                <ImageView
                        android:src="@drawable/baseline_school_black_24dp"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content" android:layout_weight="1"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/viewAffiliation"
                        android:layout_weight="1" android:layout_marginStart="@dimen/appbar_padding_top"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>