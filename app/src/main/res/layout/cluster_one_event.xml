<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="@dimen/card_width"
             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/anti_flash_white"
            app:cardCornerRadius="@dimen/appbar_padding_top" android:layout_margin="@dimen/scholar_roll_tiny_margin">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="@dimen/scholar_roll_tiny_margin">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/eventTime"
                      android:layout_marginBottom="@dimen/scholar_roll_tiny_margin"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/eventContent"
                      android:textColor="@color/design_default_color_on_secondary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
