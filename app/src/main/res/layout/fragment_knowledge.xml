<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".KnowledgeFragment">

<!--    <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:text="This is Knowledge"/>-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="?android:attr/fastScrollPreviewBackgroundRight"
                android:backgroundTint="@color/bkgColorC" android:id="@+id/entity_search">

        </SearchView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="prevEntity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/prevEntity"/>
            <Button
                    android:text="nextEntity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/nextEntity" />
        </LinearLayout>

        <include android:layout_width="match_parent" android:layout_height="match_parent"
                 android:layout_weight="5"
                 layout="@layout/knowledge_entity" android:id="@+id/someEntity"/>
    </LinearLayout>

</FrameLayout>