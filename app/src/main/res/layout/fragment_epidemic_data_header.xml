<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".EpidemicDataHeaderFragment" android:paddingTop="@dimen/scholar_roll_tiny_margin"
             android:paddingBottom="@dimen/scholar_roll_tiny_margin" android:visibility="visible">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewHeaderRegion" android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary" android:textStyle="bold"
            android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewHeaderConfirmed" android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary" android:textStyle="bold"
            android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewHeaderCured" android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary" android:textStyle="bold"
            android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewHeaderDead" android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary" android:textStyle="bold"
            android:visibility="visible"/>

</FrameLayout>